@model IList<Edvi.Models.Model.Vehiculo>

<h3>Lita  de Cliente</h3>
  
<div class="row">
    <form method="GET">
        <input type="text" name="buscar" class="form-control col-md-10" placeholder="Buscar título" />
    </form>
</div>
<div>
    <a href="@Url.Action("Create", "Vehiculo")">Crear Vehiculo</a>
</div>
<div>
    
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Placa Vehiculo</th>
                <th>Placa Carreta</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PlacaVehiculo</td>                    
                    <td>@item.PlacaCarreta</td>
                    <td>@item.Marca</td>                    
                    <td>@item.Modelo</td>
                    <td>@item.Estado</td>
                    <td>
                        <a href="@Url.Action("Edit", "Vehiculo", new{id = item.Id})">Editar</a> |
                        <a href="@Url.Action("Delete", new { Id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
</div>