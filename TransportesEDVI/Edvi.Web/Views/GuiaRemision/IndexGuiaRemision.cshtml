@model IList<Edvi.Models.Model.GuiaRemision>

<h3>Lista  de Rutas</h3>

<div class="row">
    <form method="GET">
        <input type="text" name="buscar" class="form-control col-md-12" placeholder="Buscar título" />
    </form>
</div>
<div>
    <a href="@Url.Action("Create", "GuiaRemision")">Crear Guia Remision</a>
</div>
<div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Nro</th>
                <th>PesoTotal </th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nro</td>
                    <td>@item.PesoTotal</td>
                    <td>@item.Estado</td>
                <td>
                        <a href="@Url.Action("Edit", "GuiaRemision", new { id = item.Id })">Editar</a> |
                        <a href="@Url.Action("Delete", new { Id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>