@model IList<Edvi.Models.Model.Cliente>

<h3>Lita  de Clientes</h3>
  
<div class="row">
    <form method="GET">
        <input type="text" name="buscar" class="form-control col-md-12" placeholder="Buscar título" />
    </form>
</div>
<div>
    <a href="@Url.Action("Create", "Cliente")">Crear Cliente</a>
</div>
<div>
    
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Ruc</th>
                <th>Razon Social</th>
                <th>Direccion</th>
                <th>Telefono</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ruc</td>                    
                    <td>@item.RazSocial</td>
                    <td>@item.Direccion</td>                    
                    <td>@item.Telefono</td>
                    <td>
                        <a href="@Url.Action("Edit", "Cliente", new{id = item.Id})">Editar</a> |
                        <a href="@Url.Action("Delete", new { Id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
</div>