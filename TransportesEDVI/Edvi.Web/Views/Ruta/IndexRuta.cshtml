@model IList<Edvi.Models.Model.Ruta>

<h3>Lista  de Rutas</h3>

<div class="row">
    <form method="GET">
        <input type="text" name="buscar" class="form-control col-md-12" placeholder="Buscar título" />
    </form>
</div>
<div>
    <a href="@Url.Action("Create", "Ruta")">Crear Ruta</a>
</div>
<div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Ruc</th>
                <th>Razon Social</th>
                <th>Direccion</th>
                <th>Telefono</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Origen</td>
                    <td>@item.Destino</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Distancia</td>
                    <td>
                        <a href="@Url.Action("Edit", "Ruta", new{id = item.Id})">Editar</a> |
                        <a href="@Url.Action("Delete", new { Id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>