<div class=" container">
    <div class="row">
        <div class="col-sm-12">

            <form action="@Url.Action("Create", "Ruta")" method="POST" class="form-horizontal">

                <div class="btn btn-primary">
                    <label for="Origen" class="col-sm-2 control-label">Origen</label>
                    <div class="col-sm-10">
                        @Html.TextBox("Origen", "", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Destino" class="col-sm-2 control-label">Destino</label>
                    <div class="col-sm-10">
                        @Html.TextBox("Destino", "", new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label for="Descripcion" class="col-sm-2 control-label">Comentario</label>
                    <div class="col-sm-10">
                        @Html.TextArea("Descripcion", "", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Distancia" class="col-sm-2 control-label">Distancia</label>
                    <div class="col-sm-10">
                        @Html.TextArea("Distancia", "", new { @class = "form-control" })
                    </div>
                </div>

                <button type="submit" class="btn btn-default pull-right">Guardar</button>

            </form>

        </div>
    </div>
</div>